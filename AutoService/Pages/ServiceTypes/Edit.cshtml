@page
@model AutoService.Pages.ServiceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">
    <span>  ویرایش سرویس </span>
    <span>@Model.ServiceType.Name</span>
</h2>
<hr />
<form method="post">
    <input type="hidden" asp-for="ServiceType.Id" />
    <div class="border px-3">
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                عنوان سرویس:
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="ServiceType.Name"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                قیمت سرویس:
            </div>
            <div class="col-5">
                <input type="number" asp-for="ServiceType.Price" class="form-control" />
                <span class="text-danger" asp-validation-for="ServiceType.Price"></span>
            </div>

        </div>
        <div class="form-group row my-2">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="ثبت" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-outline-success form-control">بازگشت به لیست</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
