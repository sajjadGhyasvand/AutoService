@page
@model AutoService.Pages.Users.EditModel
@{
}
<br />
<h2 class="text-info">
    <span>  ویرایش کاربر </span>
    <span>@Model.applicationUser.Name</span>
</h2>
<hr />
<form method="post">
    <input type="hidden" asp-for="applicationUser.Id" />
    <div class="border px-3">
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                نام:
            </div>
            <div class="col-5">
                <input asp-for="applicationUser.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="applicationUser.Name"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
               شهر:
            </div>
            <div class="col-5">
                <input type="text" asp-for="applicationUser.City" class="form-control" />
                <span class="text-danger" asp-validation-for="applicationUser.City"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                ایمیل:
            </div>
            <div class="col-5">
                <input type="email" asp-for="applicationUser.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="applicationUser.Email"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                آدرس:
            </div>
            <div class="col-5">
                <textarea asp-for="applicationUser.Address" class="form-control" />
                <span class="text-danger" asp-validation-for="applicationUser.Address"></span>
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                نقش:
            </div>
            <div class="col-5">
                <select asp-for="SelecetedRoles" asp-items="Model.Roles" />
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="ثبت" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-outline-success form-control">بازگشت به لیست</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

