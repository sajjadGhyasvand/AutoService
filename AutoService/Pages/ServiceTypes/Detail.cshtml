@page
@model AutoService.Pages.ServiceTypes.DetailModel

@{
    ViewData["Title"] = "جرئیات";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-info">
    <span>  جزئیات سرویس </span>
    <span>@Model.ServiceType.Name</span>
</h2>

<div>
    <h4>ServiceType</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.ServiceType.Price.ToString("#,0 تومان")
        </dd>
    </dl>
</div>
<div class="form-group row my-2">
    <div class="col-5 offset-2">
        <div class="row">
            <div class="col-6">
                <a asp-page="Edit" class="btn btn-outline-info form-control">ویرایش</a>
            </div>
            <div class="col-6">
                <a asp-page="Index" class="btn btn-outline-success form-control">بازگشت به لیست</a>
            </div>
        </div>
    </div>
</div>