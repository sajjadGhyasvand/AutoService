@page
@model AutoService.Pages.ServiceTypes.CreateModel
@{
}

<br />
<h2 class="text-info">
    افزودن سرویس جدید
</h2>
<hr />
<form method="post">
    <div class="border px-3">
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                عنوان سرویس:
            </div>
            <div class="col-5">
                <input asp-for="ServiceTypes.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-2 text-end">
                قیمت سرویس:
            </div>
            <div class="col-5">
                <input type="number" asp-for="ServiceTypes.Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row my-2">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="ثبت" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-outline-success form-control">بازگشت به لیست</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
